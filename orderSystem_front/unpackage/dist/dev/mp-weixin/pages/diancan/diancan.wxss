/* 水平间距 */
page {
  height: 100%;
}
page .container {
  height: 100%;
}
.goodWrapper {
  display: flex;
  height: 100%;
}
.goodWrapper .classify-box {
  width: 200rpx;
  height: 100%;
  box-sizing: border-box;
  padding-top: 80rpx;
  padding-bottom: 100rpx;
}
.goodWrapper .classify-box .classify {
  width: 100%;
  height: 100%;
}
.goodWrapper .classify-box .classify .classify-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.goodWrapper .classify-box .classify .classify-item text {
  width: 100%;
  text-align: center;
  font-size: 26rpx;
}
.goodWrapper .classify-box .classify .classify-item.active {
  box-sizing: border-box;
  padding-right: 14px;
}
.goodWrapper .classify-box .classify .classify-item.active text {
  background-color: #F7F8FA;
  padding: 20rpx 0;
  border-radius: 0 20rpx 20rpx 0;
  border-left: 10rpx solid #25ABBE;
}
.goodWrapper .goodsBox {
  flex: 1;
}
.goodWrapper .goodsBox scroll-view {
  box-sizing: border-box;
  padding-top: 80rpx;
  padding-bottom: 100rpx;
}
.goodWrapper .goodsBox .goodsList {
  border-radius: 20rpx 20rpx 0 0;
  background-color: #F7F8FA;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  margin: 20rpx 0 0 0;
}
.goodWrapper .goodsBox .goodsList .title {
  height: 40rpx;
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 40rpx;
  padding-left: 20rpx;
  color: #25ABBE;
}
.goodWrapper .goodsBox .goodsList .box {
  flex: 1;
  display: flex;
  height: 200rpx;
  margin: 20rpx 0;
  box-shadow: 0 0 10rpx rgba(200, 200, 200, 0.3);
  border-radius: 8rpx 0 0 8rpx;
  overflow: hidden;
}
.goodWrapper .goodsBox .goodsList .box .good-image {
  height: 200rpx;
  width: 200rpx;
}
.goodWrapper .goodsBox .goodsList .box .good-image image {
  height: 200rpx;
  width: 200rpx;
}
.goodWrapper .goodsBox .goodsList .box .goods-describe {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
  padding: 10rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
  align-items: flex-end;
}
.goodWrapper .goodsBox .goodsList .box .goods-describe .goodName {
  text-align: right;
}
.goodWrapper .goodsBox .goodsList .box .goods-describe .goodPrice {
  color: #ee7647;
}
.goodWrapper .goodsBox .goodsList .box .goods-describe .bjq-btn-box {
  display: flex;
  height: 50rpx;
}
.goodWrapper .goodsBox .goodsList .box .goods-describe .bjq-btn-box .good-number {
  line-height: 50rpx;
}
.goodWrapper .goodsBox .goodsList .box .goods-describe .bjq-btn-box button,
.goodWrapper .goodsBox .goodsList .box .goods-describe .bjq-btn-box text {
  padding: 0 10rpx;
}
.goodWrapper .goodsBox .goodsList .box .goods-describe .mini-btn {
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  margin: 0;
  padding: 0;
  background-color: #25ABBE;
  border-radius: 50%;
  color: #fff;
}

