/* 水平间距 */
.orderDetail {
  background-color: #f3f3f3;
  box-sizing: border-box;
  padding: 20rpx 14rpx;
  overflow-y: auto;
}
.orderDetail .box {
  background-color: #fff;
  box-sizing: border-box;
  height: 100%;
  padding: 20rpx 30rpx 20rpx;
}
.orderDetail .box .shopInfo {
  display: flex;
  align-items: center;
}
.orderDetail .box .shopInfo .name {
  padding-left: 14rpx;
  color: #25abbe;
  font-weight: 700;
  font-size: 16px;
}
.order-item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-radius: 20rpx;
  margin: 20rpx 0;
  height: 220rpx;
  padding: 30rpx;
  background-color: #f8f8f8;
}
.order-item .img {
  width: 160rpx;
  height: 160rpx;
}
.order-item .img ._img {
  height: 100%;
  width: 100%;
}
.order-item .order-info {
  flex: 1;
  display: flex;
}
.order-item .order-info .menu-class {
  flex: 1;
  padding: 0 40rpx 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.order-item .order-info .menu-class .name {
  font-weight: 700;
  font-size: 14px;
  text-align: left;
}
.order-item .order-info .menu-class .class {
  color: #b6b6b6;
  font-size: 14px;
  text-align: left;
  margin-bottom: 10rpx;
}
.order-item .order-info .menu-price {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding-bottom: 10rpx;
  font-size: 14px;
  text-align: right;
}
.order-item .order-info .menu-price view {
  display: flex;
  flex-direction: column;
}
.order-item .order-info .menu-price view .price-d {
  font-size: 16px;
  color: #b6b6b6;
}
.order-item .order-info .menu-price view .number {
  margin: 10rpx 0 0;
  color: #b6b6b6;
}
.order-item .order-info .menu-price .price {
  font-size: 16px;
  font-weight: 700;
}
.orderOtherInfo {
  color: #b6b6b6;
}
.orderOtherInfo .des {
  color: #000;
}
.orderOtherInfo > view {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
.orderOtherInfo .payment-price {
  color: #25abbe;
  font-weight: 700;
}

