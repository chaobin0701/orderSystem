/* 水平间距 */
.login {
  padding-top: 200rpx;
  width: 100%;
}
.login .box {
  display: flex;
  height: 700rpx;
  width: 75%;
  padding: 40rpx;
  margin: 0 auto;
  border-radius: 26rpx;
  background-color: #fff;
  flex-direction: column;
  color: #25ABBE;
  justify-content: space-between;
}
.login .box .title {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 22rpx 0;
}
.login .box .title .title_1 {
  font-size: 28rpx;
  border-bottom: 1px solid #25ABBE;
}
.login .box .title .title_2 {
  font-weight: bold;
  color: #2096a6;
  font-size: 44rpx;
}
.login .box input {
  width: 100%;
  padding-left: 15rpx;
  height: 90%;
}
.login .box .user, .login .box .password {
  display: flex;
  margin: 20rpx 0;
  height: 120rpx;
  flex-direction: column;
}
.login .box .user .userInput, .login .box .user .userPwd, .login .box .password .userInput, .login .box .password .userPwd {
  display: flex;
  height: 60rpx;
  box-sizing: border-box;
  height: 60rpx;
  margin: 10rpx 0;
  border-bottom: 1px solid rgba(49, 148, 167, 0.3);
}
.login .box .tips {
  align-self: flex-start;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding-bottom: 20rpx;
}
.login .box button {
  margin: 80rpx 0 0;
  border: none;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 40rpx;
  background-color: #22a2b3;
  color: #fff;
  border-radius: 100rpx;
}

